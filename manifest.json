{
    "manifest_version": 2,
    "name" : "PickYourOpponent",
    "version" :"1.0",
    "description" :"This Extension Pick Random Opponents for You",
    "icons":{
        "128" :"superMan128.png",
        "48":"superMan48.png",
        "16":"superMan16.png"
    },
    "browser_action":{
        "default_icon":"superMan16.png",
        "default_popup":"popup.html"
    },

    "permissions" :[
        "storage",
        "notifications",
        "contextMenus",
        "*://localhost:*/*",
        "https://*/"
    ]
}